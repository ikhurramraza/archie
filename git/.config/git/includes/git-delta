[core]
  pager = delta

[delta]
  pager = less
  paging = always
  zero-style = normal
  plus-style = auto raw
  minus-style = auto raw
  hunk-header-style = omit
  blame-code-style = syntax
  blame-palette = "#282a36"
  blame-format = "{timestamp:<15} {commit:<8}"

[diff]
  colorMoved = default

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = diff3

