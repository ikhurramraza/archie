[alias]
	co = checkout
	br = branch
	st = status
	sw = switch
	amend = commit --amend --no-edit
	append = ! git add --all && git commit --amend --no-edit
	wip = ! git add --all && git commit -m \"WIP\"
	ignored = ! git ls-files -v | grep '^[[:lower:]]' | cut -c3-
